{
    "name": "typescript-to-lua",
    "license": "MIT",
    "version": "0.5.0",
    "repository": "https://github.com/Perryvw/TypescriptToLua",
    "keywords": [
        "typescript",
        "lua",
        "tstl",
        "transpiler"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "test": "tslint -p . && ts-node ./test/runner.ts",
        "coverage": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "coverage-html": "nyc npm test && nyc report --reporter=html",
        "release-patch": "npm version patch",
        "release-minor": "npm version minor",
        "release-major": "npm version major",
        "preversion": "npm run build && npm test",
        "postversion": "git push && git push --tags"
    },
    "bin": {
        "tstl": "./dist/Compiler.js"
    },
    "nyc": {
        "all": true,
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*"
        ]
    },
    "engines": {
        "node": ">=8.5.0"
    },
    "dependencies": {
        "typescript": "^2.9.2",
        "yargs": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^9.6.23",
        "@types/yargs": "^11.0.0",
        "alsatian": "^2.2.1",
        "codecov": "3.0.2",
        "deep-equal": "^1.0.1",
        "fengari": "^0.1.2",
        "nyc": "^11.9.0",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0",
        "tslint-override": "^0.1.2"
    }
}
