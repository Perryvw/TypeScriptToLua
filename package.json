{
    "name": "typescript-to-lua",
    "license": "MIT",
    "version": "0.16.1",
    "repository": "https://github.com/Perryvw/TypescriptToLua",
    "keywords": [
        "typescript",
        "lua",
        "tstl",
        "transpiler"
    ],
    "files": [
        "dist/**/*.js",
        "dist/**/*.lua",
        "dist/**/*.ts"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json && npm run build-lualib",
        "build-lualib": "ts-node ./build_lualib.ts",
        "pretest": "npm run build-lualib",
        "test": "jest",
        "lint": "npm run lint:tslint && npm run lint:prettier",
        "lint:prettier": "prettier --check **/*.{js,ts,yml,json}",
        "lint:tslint": "tslint -p . && tslint -p test && tslint src/lualib/*.ts",
        "release-major": "npm version major",
        "release-minor": "npm version minor",
        "release-patch": "npm version patch",
        "preversion": "npm run build && npm test",
        "postversion": "git push && git push --tags"
    },
    "bin": {
        "tstl": "./dist/tstl.js"
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 100,
        "proseWrap": "always",
        "tabWidth": 4,
        "trailingComma": "all",
        "overrides": [
            {
                "files": [
                    "**/*.md",
                    "**/*.yml",
                    "**/.*.yml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "engines": {
        "node": ">=8.5.0"
    },
    "dependencies": {
        "typescript": "^3.3.1"
    },
    "devDependencies": {
        "@types/glob": "^5.0.35",
        "@types/jest": "^24.0.11",
        "@types/node": "^9.6.23",
        "fengari": "^0.1.2",
        "glob": "^7.1.2",
        "jest": "^24.5.0",
        "jest-circus": "^24.5.0",
        "prettier": "^1.16.4",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.0",
        "ts-node": "^7.0.0",
        "tslint": "^5.10.0"
    }
}
