{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "newLine": "LF",
        "target": "es2019",
        "lib": ["es2019"],
        "types": ["node", "jest"],
        "experimentalDecorators": true,

        "noEmit": true,
        "module": "commonjs"
    },
    "include": [".", "../src"],
    "exclude": [
        "translation/transformation",
        "cli/errors",
        "cli/watch",
        "transpile/directories",
        "transpile/outFile",
        "../src/lualib"
    ]
}
