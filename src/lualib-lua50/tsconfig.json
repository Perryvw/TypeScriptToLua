{
    "compilerOptions": {
        "outDir": "../../dist/lualib-lua50",
        "target": "esnext",
        "lib": ["esnext"],
        "types": ["lua-types/5.4"],
        "skipLibCheck": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "tstl": {
        "luaLibImport": "none",
        "noHeader": true,
        "luaTarget": "5.0",
        "luaPlugins": [{ "name": "../../dist/lualib-build/plugin.js" }]
    },
    "include": ["../lualib", "../../language-extensions/index.d.ts"]
}
