{
    "compilerOptions": {
        "outDir": "../../dist/lualib",
        "target": "esnext",
        "lib": ["esnext"],
        "types": ["lua-types/5.4"],
        "skipLibCheck": true,
        "rootDirs": [".", "universal"],

        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "tstl": {
        "luaLibImport": "none",
        "noHeader": true,
        "luaPlugins": [{ "name": "../../dist/lualib-build/plugin.js" }]
    },
    "include": ["*.ts", "universal/*.ts", "declarations", "../../language-extensions/index.d.ts"]
}
